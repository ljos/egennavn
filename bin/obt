set -o errexit    # Exit on error
set -o nounset    # Exit on unset variable
set -o pipefail   # Exit on failing pipe

function usage() {
    NAME=$(basename "$0")
    cat <<-EOF
	Usage:
  	  ${NAME} [-b|-n] [-s] FILE
  	  ${NAME} -h | --help

	Options:
	  -h --help     Show this screen.
	  -b --bokmål   Tag bokmål (The default).
	  -n --nynorsk  Tag nynorsk, nynorsk has no statistical tagger.
	  -s --nostat   Don't use the statistical tagger.
	EOF
}

LANG="bm"
NOSTAT=""
while [[ "$#" -gt 0 ]]; do
    case "${1}" in
	-b|--bokmål)
	    LANG="bm"
	    ;;
	-n|--nynorsk)
	    LANG="nn"
	    ;;
	-s|--nostat)
	    NOSTAT="-nostat"
	    ;;
	-h|--help)
	    usage
	    exit 0
	    ;;
	* )
	    FILE="$1"
    esac
    shift
done

CURDIR=$(realpath "${0}")
CURDIR=$(dirname "${CURDIR}")

set +e
LC_ALL="en_US.UTF-8"							\
timeout 259200 "${CURDIR}/tag${NOSTAT}-${LANG}.sh" "${FILE:-/dev/stdin}"
RETVAL="$?"
set -e

if [[ "${RETVAL}" -eq 124 ]]; then
    echo "mtag timeout after 1h; input failed" >&2
fi

exit "${RETVAL}"
